---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "CapStone Sustainable Carbon Solutions advances coal-to-products manufacturing and carbon-managed industrial infrastructure in Wyoming." } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <title>{title} | CapStone Sustainable Carbon Solutions</title>
  </head>
  <body class="min-h-screen flex flex-col bg-white text-slate-800">
    <header class="bg-white border-b border-slate-200 sticky top-0 z-50">
      <nav class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <a href="/" class="flex items-center space-x-2">
            <span class="text-xl font-semibold text-primary-800">CapStone</span>
          </a>

          <!-- Mobile menu button -->
          <button
            type="button"
            class="md:hidden p-2 text-slate-600 hover:text-primary-700"
            id="mobile-menu-button"
            aria-label="Toggle menu"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>

          <!-- Desktop navigation -->
          <div class="hidden md:flex items-center space-x-8">
            <a
              href="/"
              class:list={[
                "text-sm font-medium transition-colors",
                currentPath === "/" ? "text-primary-700" : "text-slate-600 hover:text-primary-700"
              ]}
            >
              Home
            </a>
            <a
              href="/project"
              class:list={[
                "text-sm font-medium transition-colors",
                currentPath === "/project" ? "text-primary-700" : "text-slate-600 hover:text-primary-700"
              ]}
            >
              The Project
            </a>
            <a
              href="/team"
              class:list={[
                "text-sm font-medium transition-colors",
                currentPath === "/team" ? "text-primary-700" : "text-slate-600 hover:text-primary-700"
              ]}
            >
              Team
            </a>
            <a
              href="/contact"
              class:list={[
                "text-sm font-medium transition-colors",
                currentPath === "/contact" ? "text-primary-700" : "text-slate-600 hover:text-primary-700"
              ]}
            >
              Contact
            </a>
          </div>
        </div>

        <!-- Mobile navigation -->
        <div class="hidden md:hidden pb-4" id="mobile-menu">
          <div class="flex flex-col space-y-3">
            <a
              href="/"
              class:list={[
                "text-sm font-medium px-2 py-1 rounded transition-colors",
                currentPath === "/" ? "text-primary-700 bg-primary-50" : "text-slate-600 hover:text-primary-700"
              ]}
            >
              Home
            </a>
            <a
              href="/project"
              class:list={[
                "text-sm font-medium px-2 py-1 rounded transition-colors",
                currentPath === "/project" ? "text-primary-700 bg-primary-50" : "text-slate-600 hover:text-primary-700"
              ]}
            >
              The Project
            </a>
            <a
              href="/team"
              class:list={[
                "text-sm font-medium px-2 py-1 rounded transition-colors",
                currentPath === "/team" ? "text-primary-700 bg-primary-50" : "text-slate-600 hover:text-primary-700"
              ]}
            >
              Team
            </a>
            <a
              href="/contact"
              class:list={[
                "text-sm font-medium px-2 py-1 rounded transition-colors",
                currentPath === "/contact" ? "text-primary-700 bg-primary-50" : "text-slate-600 hover:text-primary-700"
              ]}
            >
              Contact
            </a>
          </div>
        </div>
      </nav>
    </header>

    <main class="flex-1">
      <slot />
    </main>

    <footer class="bg-slate-900 text-slate-300">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="grid md:grid-cols-2 gap-8">
          <div>
            <span class="text-xl font-semibold text-white">CapStone</span>
            <p class="mt-2 text-sm text-slate-400">Sustainable Carbon Solutions</p>
          </div>
          <div class="md:text-right">
            <p class="text-sm">Wyoming, USA</p>
            <p class="mt-4 text-xs text-slate-500">&copy; 2025 CapStone Sustainable Carbon Solutions. All rights reserved.</p>
          </div>
        </div>
      </div>
    </footer>

    <script>
      const menuButton = document.getElementById('mobile-menu-button');
      const mobileMenu = document.getElementById('mobile-menu');

      menuButton?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
      });
    </script>
  </body>
</html>
