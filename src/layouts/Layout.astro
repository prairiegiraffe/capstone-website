---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "CapStone Sustainable Carbon Solutions advances coal-to-products manufacturing and carbon-managed industrial infrastructure in Wyoming." } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <title>{title} | CapStone Sustainable Carbon Solutions</title>
  </head>
  <body class="min-h-screen flex flex-col bg-slate-50 text-slate-800">
    <!-- Top gold accent bar - the "we're serious" stripe -->
    <div class="h-1 bg-gradient-to-r from-gold-600 via-gold-500 to-gold-600"></div>

    <header class="bg-navy-950 text-white sticky top-0 z-50 shadow-lg">
      <nav class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-20">
          <a href="/" class="flex items-center space-x-3">
            <div class="flex items-center">
              <!-- Simple but dignified mark -->
              <div class="w-10 h-10 border-2 border-gold-500 flex items-center justify-center">
                <span class="text-gold-500 font-serif font-bold text-xl">C</span>
              </div>
              <div class="ml-3">
                <span class="text-xl font-semibold tracking-wide">CAPSTONE</span>
                <span class="hidden sm:block text-xs text-gold-500 tracking-widest uppercase">Sustainable Carbon Solutions</span>
              </div>
            </div>
          </a>

          <!-- Mobile menu button -->
          <button
            type="button"
            class="md:hidden p-2 text-slate-300 hover:text-gold-500"
            id="mobile-menu-button"
            aria-label="Toggle menu"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>

          <!-- Desktop navigation -->
          <div class="hidden md:flex items-center space-x-1">
            <a
              href="/"
              class:list={[
                "px-4 py-2 text-sm font-medium tracking-wide uppercase transition-colors",
                currentPath === "/" ? "text-gold-500" : "text-slate-300 hover:text-gold-500"
              ]}
            >
              Home
            </a>
            <a
              href="/about"
              class:list={[
                "px-4 py-2 text-sm font-medium tracking-wide uppercase transition-colors",
                currentPath === "/about" ? "text-gold-500" : "text-slate-300 hover:text-gold-500"
              ]}
            >
              About
            </a>
            <a
              href="/project"
              class:list={[
                "px-4 py-2 text-sm font-medium tracking-wide uppercase transition-colors",
                currentPath === "/project" ? "text-gold-500" : "text-slate-300 hover:text-gold-500"
              ]}
            >
              The Project
            </a>
            <a
              href="/team"
              class:list={[
                "px-4 py-2 text-sm font-medium tracking-wide uppercase transition-colors",
                currentPath === "/team" ? "text-gold-500" : "text-slate-300 hover:text-gold-500"
              ]}
            >
              Leadership
            </a>
            <a
              href="/insights"
              class:list={[
                "px-4 py-2 text-sm font-medium tracking-wide uppercase transition-colors",
                currentPath === "/insights" || currentPath.startsWith("/insights/") ? "text-gold-500" : "text-slate-300 hover:text-gold-500"
              ]}
            >
              Insights
            </a>
            <a
              href="/contact"
              class:list={[
                "px-4 py-2 text-sm font-medium tracking-wide uppercase transition-colors border border-gold-600 hover:bg-gold-600 hover:text-navy-950 ml-4",
                currentPath === "/contact" ? "bg-gold-600 text-navy-950" : "text-gold-500"
              ]}
            >
              Contact
            </a>
          </div>
        </div>

        <!-- Mobile navigation -->
        <div class="hidden md:hidden pb-4" id="mobile-menu">
          <div class="flex flex-col space-y-1 border-t border-navy-800 pt-4">
            <a
              href="/"
              class:list={[
                "px-4 py-2 text-sm font-medium tracking-wide uppercase",
                currentPath === "/" ? "text-gold-500 bg-navy-900" : "text-slate-300 hover:text-gold-500"
              ]}
            >
              Home
            </a>
            <a
              href="/about"
              class:list={[
                "px-4 py-2 text-sm font-medium tracking-wide uppercase",
                currentPath === "/about" ? "text-gold-500 bg-navy-900" : "text-slate-300 hover:text-gold-500"
              ]}
            >
              About
            </a>
            <a
              href="/project"
              class:list={[
                "px-4 py-2 text-sm font-medium tracking-wide uppercase",
                currentPath === "/project" ? "text-gold-500 bg-navy-900" : "text-slate-300 hover:text-gold-500"
              ]}
            >
              The Project
            </a>
            <a
              href="/team"
              class:list={[
                "px-4 py-2 text-sm font-medium tracking-wide uppercase",
                currentPath === "/team" ? "text-gold-500 bg-navy-900" : "text-slate-300 hover:text-gold-500"
              ]}
            >
              Leadership
            </a>
            <a
              href="/insights"
              class:list={[
                "px-4 py-2 text-sm font-medium tracking-wide uppercase",
                currentPath === "/insights" || currentPath.startsWith("/insights/") ? "text-gold-500 bg-navy-900" : "text-slate-300 hover:text-gold-500"
              ]}
            >
              Insights
            </a>
            <a
              href="/contact"
              class:list={[
                "px-4 py-2 text-sm font-medium tracking-wide uppercase",
                currentPath === "/contact" ? "text-gold-500 bg-navy-900" : "text-slate-300 hover:text-gold-500"
              ]}
            >
              Contact
            </a>
          </div>
        </div>
      </nav>
    </header>

    <main class="flex-1">
      <slot />
    </main>

    <footer class="bg-navy-950 text-slate-300">
      <!-- Gold divider line -->
      <div class="h-px bg-gradient-to-r from-transparent via-gold-600 to-transparent"></div>

      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
        <div class="grid md:grid-cols-3 gap-12">
          <div>
            <div class="flex items-center mb-4">
              <div class="w-8 h-8 border border-gold-600 flex items-center justify-center">
                <span class="text-gold-500 font-serif font-bold">C</span>
              </div>
              <span class="ml-2 font-semibold text-white tracking-wide">CAPSTONE</span>
            </div>
            <p class="text-sm text-slate-400">Sustainable Carbon Solutions</p>
            <p class="mt-4 text-sm text-slate-500">Advancing American energy independence through responsible industrial development.</p>
          </div>

          <div>
            <h4 class="text-gold-500 font-semibold text-sm tracking-widest uppercase mb-4">Navigation</h4>
            <div class="space-y-2">
              <a href="/" class="block text-sm text-slate-400 hover:text-gold-500 transition-colors">Home</a>
              <a href="/about" class="block text-sm text-slate-400 hover:text-gold-500 transition-colors">About</a>
              <a href="/project" class="block text-sm text-slate-400 hover:text-gold-500 transition-colors">The Project</a>
              <a href="/team" class="block text-sm text-slate-400 hover:text-gold-500 transition-colors">Leadership</a>
              <a href="/insights" class="block text-sm text-slate-400 hover:text-gold-500 transition-colors">Insights</a>
              <a href="/contact" class="block text-sm text-slate-400 hover:text-gold-500 transition-colors">Contact</a>
            </div>
          </div>

          <div>
            <h4 class="text-gold-500 font-semibold text-sm tracking-widest uppercase mb-4">Headquarters</h4>
            <p class="text-sm text-slate-400">Wyoming, USA</p>
            <p class="mt-6 text-xs text-slate-600">&copy; 2025 CapStone Sustainable Carbon Solutions, LLC.<br>All rights reserved.</p>
          </div>
        </div>
      </div>
    </footer>

    <script>
      const menuButton = document.getElementById('mobile-menu-button');
      const mobileMenu = document.getElementById('mobile-menu');

      menuButton?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
      });
    </script>
  </body>
</html>
